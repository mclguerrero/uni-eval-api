{
  "name": "evaluation-system-backend",
  "version": "1.0.0",
  "description": "Backend for Teacher Evaluation System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "docker:build": "docker build -t backend .",
    "docker:run": "docker run -p 5000:5000 backend",
    "prod": "NODE_ENV=production node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:generate:local": "prisma generate --schema=prisma/schema.prisma",
    "prisma:generate:auth": "prisma generate --schema=prisma/auth/schema.prisma",
    "prisma:generate:user": "prisma generate --schema=prisma/user/schema.prisma",
    "prisma:generate:metric": "prisma generate --schema=prisma/metric/schema.prisma",
    "prisma:generate:all": "npm run prisma:generate:local && npm run prisma:generate:auth && npm run prisma:generate:user && npm run prisma:generate:metric",
    "prisma:db:pull": "prisma db pull",
    "prisma:db:pull:local": "prisma db pull --schema=prisma/schema.prisma",
    "prisma:db:pull:auth": "prisma db pull --schema=prisma/auth/schema.prisma",
    "prisma:db:pull:user": "echo 'Evitar pull en remotos: usa schema.min.prisma manual'",
    "prisma:db:pull:metric": "prisma db pull --schema=prisma/metric/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=prisma/schema.prisma"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "evaluation",
    "teacher",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^3.0.3",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "docx": "^9.5.0",
    "docxtemplater": "^3.67.5",
    "docxtemplater-image-module": "^3.1.0",
    "docxtemplater-image-module-free": "^1.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.1",
    "md5": "^2.3.0",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "mysqldump": "^3.2.0",
    "node-cron": "^3.0.3",
    "ollama": "^0.6.3",
    "pizzip": "^3.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^6.19.0"
  },
  "_moduleAliases": {
    "@db": "src/db",
    "@common": "src/common",
    "@config": "src/config",
    "@constants": "src/constants",
    "@controllers": "src/api/v1/controllers",
    "@jobs": "src/api/v1/jobs",
    "@middlewares": "src/api/v1/middlewares",
    "@models": "src/api/v1/models",
    "@routes": "src/api/v1/routes",
    "@services": "src/api/v1/services",
    "@swagger": "src/api/v1/swagger",
    "@templates": "src/api/v1/templates",
    "@utils": "src/api/v1/utils",
    "@validations": "src/api/v1/validations",
    "@aspectosServices": "src/api/v1/services/evaluacion/aspectos",
    "@escalasServices": "src/api/v1/services/evaluacion/escalas",
    "@configuracionesServices": "src/api/v1/services/evaluacion/configuraciones",
    "@aspectosControllers": "src/api/v1/controllers/evaluacion/aspectos",
    "@escalasControllers": "src/api/v1/controllers/evaluacion/escalas",
    "@configuracionesControllers": "src/api/v1/controllers/evaluacion/configuraciones",
    "@aspectosModels": "src/api/v1/models/evaluacion/aspectos",
    "@escalasModels": "src/api/v1/models/evaluacion/escalas",
    "@configuracionesModels": "src/api/v1/models/evaluacion/configuraciones",
    "@aspectosSwagger": "src/api/v1/swagger/evaluacion/aspectos",
    "@escalasSwagger": "src/api/v1/swagger/evaluacion/escalas",
    "@configuracionesSwagger": "src/api/v1/swagger/evaluacion/configuraciones",
    "@authController": "src/api/v1/controllers/auth",
    "@estudianteController": "src/api/v1/controllers/estudiante",
    "@evaluacionController": "src/api/v1/controllers/evaluacion",
    "@reportesController": "src/api/v1/controllers/reportes",
    "@vistaController": "src/api/v1/controllers/vista",
    "@authModel": "src/api/v1/models/auth",
    "@estudianteModel": "src/api/v1/models/estudiante",
    "@evaluacionModel": "src/api/v1/models/evaluacion",
    "@reportesModel": "src/api/v1/models/reportes",
    "@vistaModel": "src/api/v1/models/vista"
  }
}
